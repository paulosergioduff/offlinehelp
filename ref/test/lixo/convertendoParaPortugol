variaveis
   qtd_merc, qtd_itens, qtd_acum, i: inteiro
   val_uni, val_tot, media: real/
inicio
   qtd_acum <- 0;
   val_tot <- 0;
   escrever'informe a quantidade de mercadorias existentes';
   ler qtd_itens;
   para i de 1 ate qtd_itens faca
      escrever 'Informe a quantidade em estoque e valor unitário da ", i, "ª mercadoria :';
      ler qtd_merc;
      ler val_uni;
      val_tot <- val_tot + val_uni * qtd_merc;
      qtd_acum <- qtd_acum + qtd_merc;
   fimpara
   escreverl 'Valor total em estoque: ' val_tot;
   media <- val_tot / qtd_acum/
   escreverl 'Média de valor das mercadorias: ', media;
fim